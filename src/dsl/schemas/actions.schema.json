{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DSLActionTurn",
  "type": "object",
  "required": ["actions"],
  "properties": {
    "actions": {
      "type": "array",
      "description": "Array of actions to apply in this turn",
      "items": {
        "$ref": "#/definitions/DSLAction"
      }
    }
  },
  "definitions": {
    "DSLAction": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "species"],
          "properties": {
            "type": {
              "const": "SpeciesCreate"
            },
            "species": {
              "type": "object",
              "required": ["id", "name", "description", "creation_turn"],
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "description": {
                  "type": "string",
                  "minLength": 1
                },
                "parent": {
                  "type": "string"
                },
                "creation_turn": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "preview"],
          "properties": {
            "type": {
              "const": "SpeciesCreateChoice"
            },
            "preview": {
              "type": "object",
              "required": ["id", "name", "description", "parent_id", "creation_turn"],
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "description": {
                  "type": "string",
                  "minLength": 1
                },
                "parent_id": {
                  "type": "string",
                  "minLength": 1
                },
                "creation_turn": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "species_id", "extinction_turn"],
          "properties": {
            "type": {
              "const": "SpeciesExtinct"
            },
            "species_id": {
              "type": "string",
              "minLength": 1
            },
            "extinction_turn": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "preview"],
          "properties": {
            "type": {
              "const": "SpeciesExtinctChoice"
            },
            "preview": {
              "type": "object",
              "required": ["species_id", "extinction_turn"],
              "properties": {
                "species_id": {
                  "type": "string",
                  "minLength": 1
                },
                "extinction_turn": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          }
        }
      ]
    }
  }
}